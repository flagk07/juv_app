{
  "name": "juv-telegram-webapp",
  "version": "1.0.0",
  "description": "Telegram WebApp for JUV jewelry brand with AI assistant",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:webapp\" \"npm run dev:bot\"",
    "dev:webapp": "cd webapp && npm run dev",
    "dev:bot": "cd bot && npm run dev",
    "build": "npm run build:webapp",
    "build:webapp": "cd webapp && npm run build",
    "start": "npm run start:bot",
    "start:bot": "cd bot && npm start",
    "install:all": "npm install && cd webapp && npm install && cd ../bot && npm install",
    "setup:db": "node scripts/setup-database.js"
  },
  "keywords": ["telegram", "webapp", "jewelry", "ai", "bot"],
  "author": "JUV",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "webapp",
    "bot"
  ]
} 